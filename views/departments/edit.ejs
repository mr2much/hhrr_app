<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Editar <%= department.name %></h1>

  <div class="col-6 offset-3">
    <form
      class="row validate-form"
      action="/api/v1/departments/<%= department._id %>?_method=PUT"
      method="POST"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="name"
          >Nombre del Departamento: <span class="text-danger">*</span></label
        >
        <input
          id="name"
          class="form-control"
          name="department[name]"
          type="text"
          value="<%= department.name %>"
          required
        />
        <div class="invalid-feedback">
          Es necesario proveer un nombre para el departamento!
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="imgUrl"
          >Image URL: <span class="text-danger">*</span></label
        >
        <input
          id="imgUrl"
          class="form-control"
          name="department[imgUrl]"
          type="imgUrl"
          value="<%= department.imgUrl %>"
        />
        <div class="invalid-feedback">
          Es necesario proveer una dirección de correo!
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="email"
          >Email: <span class="text-danger">*</span></label
        >
        <input
          id="email"
          class="form-control"
          name="department[email]"
          type="email"
          value="<%= department.email %>"
          required
        />
        <div class="invalid-feedback">
          Es necesario proveer una dirección de correo!
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location"
          >Location: <span class="text-danger">*</span></label
        >
        <input
          id="text"
          class="form-control"
          name="department[location]"
          type="location"
          value="<%= department.location %>"
        />
        <div class="invalid-feedback">
          Es necesario proveer una dirección de correo!
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Descripcion:</label>
        <textarea
          class="form-control"
          id="description"
          cols="30"
          rows="5"
          name="department[description]"
          placeholder=""
        >
<%= department.description %></textarea
        >
      </div>

      <div
        class="btn-group col-12"
        role="group"
        aria-label="Controles de Formulario Perfil Nuevo"
      >
        <button class="btn btn-lg btn-success" type="submit">
          <span class="pe-2"><i class="far fa-save"></i></span>Guardar
        </button>
        <a
          href="/api/v1/departments/"
          class="btn btn-lg btn-warning"
          type="button"
        >
          <span class="pe-2"><i class="fas fa-ban"></i></span>Cancelar
        </a>
      </div>
    </form>
  </div>
</div>
