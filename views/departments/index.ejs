<% layout('layouts/boilerplate') %>

<h1 class="mb-3 text-center text-success">HHRR Manager</h1>
<h2 class="mb-3 text-center text-info">Listado de Departamentos</h2>

<div class="row row-cols-1 row-cols-md-4 g-4">
  <% for(department of departments) { %>
  <div class="col">
    <div class="card h-100">
      <img
        src="<%= department.imgUrl %>"
        class="card-img-top"
        alt="Image para <%= department.name %>"
      />
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= department.name %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">
          Email: <%= department.email %>
        </h6>
        <p class="card-text"><%= department.location %></p>
        <p class="card-text"><%= department.description %></p>

        <a
          class="btn btn-info mt-auto"
          href="/api/v1/departments/<%= department._id %>"
          >Ver Detalles</a
        >
      </div>

      <div class="card-footer">
        <small class="text-body-secondary">Last updated 3 mins ago</small>
      </div>
    </div>
  </div>
  <% } %>
</div>
