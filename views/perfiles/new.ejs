<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center"><%= department.new %></h1>
    <h1 class="text-center">Crear Nuevo Perfil</h1>
  
    <div class="col-6 offset-3">
      <form class="row validate-form" action="/api/v1/departments/<%= department._id %>/profiles" method="POST" novalidate>
        <div class="mb-3">
          <label class="form-label" for="name">Nombre del Perfil: <span class="text-danger">*</span></label> 
            <input
              id="name"
              class="form-control"
              name="profile[name]"
              type="text"
              placeholder="Ex. Accounting"
              required
          />       
          <div class="invalid-feedback">Es necesario proveer un nombre de perfil!</div>
        </div>  
          
        <div
          class="btn-group col-12"
          role="group"
          aria-label="Controles de Formulario Perfil Nuevo"
        >
          <button class="btn btn-lg btn-success" type="submit">
            <span class="pe-2"><i class="far fa-save"></i></span>Guardar
          </button>
          <a
            href="/api/v1/profiles/"
            class="btn btn-lg btn-warning"
            type="button"
          >
            <span class="pe-2"><i class="fas fa-ban"></i></span>Cancelar
          </a>
        </div>
      </form>
    </div>
  </div>