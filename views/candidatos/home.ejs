<% layout('layouts/boilerplate') %>
<div class="container-fluid">
  <h1 class="mb-3 text-center text-success">HHRR Manager</h1>

  <h2 class="text-info">Listado de Candidatos</h2>

  <table class="table table-dark table-striped table-hover">
    <thead class="table-info">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Cedula</th>
        <th scope="col">Nombres</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Fecha de Nacimiento</th>
        <th scope="col">Trabajo Actual</th>
        <th scope="col">Expectativa Salarial</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% let count = 1; %> <% for(candidato of candidatos ) { %>
      <tr>
        <th scope="row"><%= count %></th>
        <td><%= candidato.cedula %></td>
        <td><%= candidato.nombres %></td>
        <td><%= candidato.apellidos %></td>
        <td><%= candidato.localDate %></td>
        <td><%= candidato.job_actual ? candidato.job_actual : 'Ninguno' %></td>
        <td><%= candidato.salaryDOP %></td>
        <td>
          <div>
            <a
              style="color: inherit"
              href="/api/v1/candidatos/<%= candidato._id %>"
              ><i class="fas fa-eye"></i
            ></a>
          </div>
        </td>
      </tr>
      <% count++; %> <% } %>
    </tbody>
  </table>
</div>
