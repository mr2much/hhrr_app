  <body>
    <%- include('../partials/navbar') %>

    <div class="d-flex justify-content-center">
      <div id="candidato">
        <div class="card mb-3">
          <div class="d-flex row g-0">
            <div class="col-md-4">
              <img
                id="image-candidato"
                style="width: 512px; object-fit: cover"
                src="<%= candidato.imgUrl %>"
                class="img-fluid rounded-start"
                alt="Imagen candidato <%= candidato.fullName %>"
              />
            </div>
            <div class="col-md-8 flex-grow-2">
              <div class="card-header">
                <ul
                  class="d-flex nav nav-tabs card-header-tabs"
                  data-bs-tabs="tabs"
                >
                  <li class="nav-item">
                    <a
                      class="nav-link active"
                      aria-current="true"
                      data-bs-toggle="tab"
                      href="#datos-personales"
                      >Datos Personales</a
                    >
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link"
                      data-bs-toggle="tab"
                      href="#datos-laborales"
                      >Datos Laborales</a
                    >
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link"
                      data-bs-toggle="tab"
                      href="#informacion-adicional"
                      >Informacion Adicional</a
                    >
                  </li>
                </ul>
              </div>
              <div class="card-body tab-content col-md-10 mx-auto">
                <div class="tab-pane active" id="datos-personales">
                  <h5 class="cart-title"><%= candidato.fullName %></h5>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                      Cedula: <%= candidato.cedula %>
                    </li>
                    <li class="list-group-item">
                      Email: <%= candidato.email %>
                    </li>
                    <li class="list-group-item">
                      Fecha de Nacimiento: <%= new
                      Date(candidato.dob).getFullYear() %>
                    </li>
                    <li class="list-group-item">Edad: <%= candidato.age %></li>
                  </ul>
                </div>
              </div>
              <div class="card-body tab-content col-md-10 mx-auto">
                <div class="tab-pane" id="datos-laborales">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                      Candidato labora actualmente? <%=
                      candidato.currentlyWorking ? 'Si' : 'No' %>
                    </li>
                    <li class="list-group-item">
                      Empleo Actual: <%= candidato.job_actual %>
                    </li>
                    <li class="list-group-item">
                      Expectativa Salarial: <%= candidato.exp_salario %>
                    </li>
                    <li class="list-group-item">
                      Perfil del Candidato: <%=candidato.perfilCandidato ?
                      candidato.perfilCandidato : 'No definido' %>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="card-body tab-content col-md-10 mx-auto">
                <div class="tab-pane" id="informacion-adicional">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                      Nivel Academico: <%= candidato.nivelAcademico ?
                      candidato.nivelAcademico : 'No definido' %>
                    </li>
                    <li class="list-group-item">
                      País: <%= candidato.country %>
                    </li>
                    <li class="list-group-item">
                      Región: <%= candidato.region %>
                    </li>
                    <li class="list-group-item">
                      Nota: <%= candidato.notas %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div
            class="btn-group col-md-4 p-3 ms-auto"
            role="group"
            aria-label="Controles de Candidato"
          >
            <a
              href="/api/v1/candidatos/<%= candidato._id %>/edit"
              class="btn btn-success mt-2 col-md-5"
              ><span class="pe-2"><i class="fas fa-user-edit"></i></span
              >Editar</a
            ><button id="deleteBtn" class="btn btn-danger mt-2 col-md-5">
              <span class="pe-2"><i class="fas fa-trash-alt"></i></span>Eliminar
            </button>
          </div>
        </div>
      </div>
    </div>

